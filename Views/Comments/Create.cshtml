@model WarhammerForum.Models.Comment

@{
    ViewData["Title"] = "Create";
}

<h1>Add Comment - @ViewData["DiscussionTitle"]</h1>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Content" class="control-label">Your Comment</label>
                <textarea asp-for="Content"
                          class="form-control"
                          rows="10" @* Sets the height *@
                          style="min-height: 200px; resize: vertical;"> 
                </textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <input type="hidden" asp-for="DiscussionId" value="@ViewData["DiscussionId"]" />

            <div class="form-group mt-3">
                <input type="submit" value="Post Comment" class="btn btn-primary" />
                <a asp-controller="Home"
                   asp-action="GetDiscussion"
                   asp-route-id="@ViewData["DiscussionId"]"
                   class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
