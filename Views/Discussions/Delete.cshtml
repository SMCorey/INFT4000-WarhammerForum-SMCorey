@model WarhammerForum.Models.Discussion

@{
    ViewData["Title"] = "Delete Discussion";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="text-light mb-2">Delete Discussion</h1>
            <h5 class="text-danger mb-4">Are you sure you want to delete this discussion?</h5>

            <div class="card bg-dark border-secondary mb-4">
                <div class="card-body">
                    <div class="mb-4">
                        <h3 class="card-title text-danger">@Model.Title</h3>
                        <p class="text-light-emphasis">Posted on @Model.CreateDate.ToString("MMM dd, yyyy HH:mm")</p>

                        @if (!string.IsNullOrEmpty(Model.ImageFilename))
                        {
                            <div class="mb-3">
                                <img src="/images/@Model.ImageFilename" class="img-fluid rounded" alt="Discussion image" style="max-height: 200px;">
                            </div>
                        }

                        <p class="card-text text-light mb-4">@Model.Content</p>
                    </div>

                    <div class="alert alert-warning mb-4">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>
                        This action cannot be undone. All comments associated with this discussion will also be deleted.
                    </div>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="DiscussionId" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>