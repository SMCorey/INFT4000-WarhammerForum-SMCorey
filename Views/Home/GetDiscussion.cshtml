@model WarhammerForum.Models.Discussion
@{
}

<div class="container">
    <div class="card mb-4">
        <div class="card-body">
            <h1 class="card-title">@Model.Title</h1>
            <p class="text-muted">Posted on @Model.CreateDate.ToString("MMM dd, yyyy HH:mm")</p>

            @if (!string.IsNullOrEmpty(Model.ImageFilename))
            {
                <img src="/images/@Model.ImageFilename" class="img-fluid mb-3" alt="Discussion image">
            }

            <p class="card-text">@Model.Content</p>
        </div>
    </div>

    <div class="mb-4">
        <h3>Comments</h3>
        <a asp-controller="Comments" asp-action="Create" asp-route-discussionId="@Model.DiscussionId"
           class="btn btn-primary mb-3">Add Comment</a>

        @if (Model.Comments != null && Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <p class="card-text">@comment.Content</p>
                        <p class="card-text">
                            <small class="text-muted">
                                Posted on @comment.CreateDate.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </p>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No comments yet. Be the first to comment!</p>
        }
    </div>
</div>